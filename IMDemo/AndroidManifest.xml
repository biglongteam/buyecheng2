             android:screenOrientation="portrait"
            />
        
     
        
        
        
        
        
        
        <!-- 联系人服务 -->
		<service android:name=".service.IMContactService"></service>
		<!-- 聊天服务 -->
		<service android:name=".service.IMChatService"></service>  
		<!-- 系统消息服务 -->
		<service android:name=".service.IMSystemMsgService"></service>
