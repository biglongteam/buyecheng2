<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_maincolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_color_actionbar1"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/custom_actionbar_back"
             android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="5dp"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/chevron_left1"
            android:background="@drawable/selector_clickfocus1"
            android:gravity="center"
            android:text="@string/back1"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/to_chat_name"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:text="zhangsan"
            android:ellipsize="end"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        
        

        

        <ImageButton
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0.0dip"
            android:visibility="gone"
            android:src="@drawable/popbar_icon_info" />
    </RelativeLayout>
<!-- 
        <ListView
