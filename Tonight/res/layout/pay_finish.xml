<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:youti="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2B2F"
    android:orientation="vertical" >

    
      <include
            android:id="@+id/nearby_header"
            layout="@layout/common_title_bar" />


        <LinearLayout
            android:layout_below="@id/nearby_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2F2B2F"
            android:orientation="vertical" >
            
             <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2F2B2F"
            android:layout_margin="@dimen/x20"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:text="订单名称:"
                android:textSize="@dimen/x30"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:text="X-10001"
                android:textSize="@dimen/x30"
                android:textColor="#ffffff" />

            </LinearLayout>
            
           
             
             <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2F2B2F"
            android:layout_margin="@dimen/x20"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:text="订单金额:"
                android:textSize="@dimen/x30"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_totall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:text="3000"
               android:textColor="#FA6638"
               android:textSize="@dimen/x40" />

            </LinearLayout>
             

           
            
 		<View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#F0F0F0"
                />

 		
           
        </LinearLayout>

   
</RelativeLayout>