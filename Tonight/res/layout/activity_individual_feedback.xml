<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color" >
    
	<com.hangzhou.tonight.module.base.widget.TbarView
        android:id="@id/custom_actionbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <EditText
	        android:id="@+id/individual_feedback_options" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:lines="8"
			android:maxLines="8"
			android:gravity="top|left"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingRight="10dp"
			android:paddingLeft="10dp"
			android:layout_marginBottom="10dp"
			android:background="@color/black"
			android:hint="@string/input_your_option"
			android:textColor="@color/white"
	        />
	    
	    <EditText
	        android:id="@+id/individual_feedback_contacts"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:background="@color/black"
	        android:hint="@string/input_your_contacts"
	        android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingRight="10dp"
			android:paddingLeft="10dp"
			android:textColor="@color/white"
	        />
	</LinearLayout>
</LinearLayout>
