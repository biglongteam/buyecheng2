<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
     >
    
    <com.hangzhou.tonight.module.base.widget.TbarView
        android:id="@id/custom_actionbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <!-- 添加个人动态 -->
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#FF383438"
	    android:padding="18dp"
	    android:orientation="vertical"
	    >
	    
	    <EditText
	        android:id="@+id/add_dynamic_text_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColorHint="#FF9B9B9B"
	        android:textColor="@color/white"
	        android:background="@null"
	        android:hint="@string/add_dynamic_text_content"
	        android:textSize="15sp"
	        android:lines="10"
	        android:maxLines="10"
	        android:gravity="top|left"
	        />
	    <!-- 考虑添加水平滚动条 -->
	    <HorizontalScrollView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scrollbars="none"
	        >
	        <LinearLayout
	            android:id="@+id/add_dynamic_add_imgs_container"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        >
		        <ImageView
		            android:id="@+id/add_dynamic_add_imgs"
		            android:layout_width="@dimen/refresh_header_height"
		            android:layout_height="@dimen/refresh_header_height"
		            android:src="@drawable/head_add"
		            android:scaleType="fitCenter"
		            android:contentDescription="@null"
		            />
		    </LinearLayout>
	        
	    </HorizontalScrollView>
	    
	</LinearLayout>
	
</LinearLayout>
